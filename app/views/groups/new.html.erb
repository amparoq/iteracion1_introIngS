<div style= "margin-top: 40px; margin-left: 40px;">
  <h1>New group</h1>
  <%= form_for @group do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <br>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <br>
    <div class="field">
      <%= f.label :project_id %>
      <%= f.number_field :project_id %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "Create Group", class: "btn btn-success" %>
    </div>
  <% end %>

  <div>
    <%= link_to "Back to groups", groups_path %>
  </div>
</div>
