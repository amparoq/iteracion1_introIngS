<style>

.grid-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr); 
  grid-gap: 10px; 
}

.grid-item {
  padding: 10px;
  background-color: #f9f9f9;
  border: 1px solid #ccc;
  text-align: center;
  border-radius: 15px;
  width: 70%;
}

.new_task {
  position: absolute,
  top: 0,
  right: 0
}

.user-icon {
  font-size: 48px; 
  color: #484848;
  margin-bottom: 7px;
}
.progress-bar {
  width: 100%;
  height: 16px;
  background-color: #ccc;
  border: 1px solid #0074d9;
  border-radius: 8px;
  position: relative;
  margin-top: 10px;
}

.progress-bar-inner {
  width: 0;
  height: 100%;
  border-radius: 6px;
  background-color: #0074d9;
  transition: width 0.3s;
}

.task-details {
  flex: 1;
}

.boton {
  width: 90px;
  display: inline-block;
  padding: 10px;
  background-color: #0074d9;
  color: white;
  text-decoration: none;
  border-radius: 5px;
}

.task-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 20px; /* Ajusta este valor según tu preferencia para la separación entre los datos y el progreso. */
}


</style>

<div style= "margin-left: 40px; margin-top: 30px;">

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <div>
    <h2> Bandeja de Entrada </h2> 
    <p style="color: #c0c0c0"><%= Date.today %></p>
    <hr>

    <% if @next_to_end_date.present? %>
        <% @next_to_end_date.each do |al| %>
            <div class="alert alert-warning" role="alert">
                La tarea "<%= al.name %>" está cerca de su fecha de expiración (<%= al.end_date %>)
            </div>
        <% end %>
    <% end %>

    <% if @expired.present? %>
        <% @expired.each do |al| %>
            <div class="alert alert-danger" role="alert">
                La tarea "<%= al.name %>" expiró (<%= al.end_date %>)
            </div>
        <% end %>
    <% end %>

    <% if @updates_today.present? %>
        <% @updates_today.each do |al| %>
            <div class="alert alert-info" role="alert">
                La tarea "<%= al.name %>" ha sido actualizada hoy
            </div>
        <% end %>
    <% end %>

    <% if @tasks_created_today.present? %>
        <% @tasks_created_today.each do |al| %>
            <div class="alert alert-success" role="alert">
                La tarea "<%= al.name %>", fue creada hoy por <%= al.user.email %>
            </div>
        <% end %>
    <% end %>

  </div>
</div>